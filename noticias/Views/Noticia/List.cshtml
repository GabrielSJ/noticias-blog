@model NoticiaListViewModel

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" style="text-align:center"> <h2> Ultimas Noticias</h2></div>
        </div>
    </div>

<div class="container">
    <div class="row">
        @foreach (var noticia in Model.Noticias)
        {
            <div class="col-sm-12 col-md-12 col-lg-12">
                <h4>@noticia.Titulo</h4>
                <p><img src="@noticia.Imagem"></p>
                <p>@noticia.Texto</p>
                <p>@Model.Usuario</p>
            </div>
        }
    </div>
</div>